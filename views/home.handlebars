<h1>Restaurants</h1>
<section class="gallery">
    {{#each restaurants}}
        <a href="./{{this.id}}">
            <div class="galleryItem">
                <h3>{{this.name}}</h3>
                <div class="image" style="background-image: url({{this.image}});">
                </div>
                <h4>Menus:</h4>
                <ul>
                    {{#each this.menus}}
                        <li>{{this.title}}</li>
                    {{/each}}
                </ul>
            </div>
        </a>
    {{/each}}
    <div class="galleryItem">
        <h3>Add a restaurant:</h3>
        <form class="addRestaurant" action="/" method="POST">
            <input type="text" id="name" name="name" placeholder="Restaurant Name" required> <br>
            <input type="url" id="image" name="image" placeholder="Image Url" required> <br>
            <input type="submit" value="Add Restaurant">
        </form>
    </div>

</section>